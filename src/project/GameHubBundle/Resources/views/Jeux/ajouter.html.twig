{% extends "base.html.twig" %}
{% block body %}
<H1>Ajouter un jeu</H1>



    <!-- start: REGISTER BOX -->
    <div class="box-register">
        {{ form_start(form) }}

        <fieldset>
            <legend>
                Ajouter jeu
            </legend>
            <div class="row">
                <div class="col-md-6">
            <div>Titre</div>
            <div class="form-group">

                {{ form_widget(form.nom) }}

            </div>
            <div>Genre</div>
            <div class="form-group">

                {{ form_widget(form.genre) }}

            </div>
            <div>Note</div>
            <div class="form-group">

                {{ form_widget(form.note) }}

            </div>
            <div>Description</div>
            <div class="form-group">

                {{ form_widget(form.description) }}

            </div>
            <div>Date Sortie</div>
            <div class="form-group">

                {{ form_widget(form.dateSortie) }}

            </div>
                </div>
                <div class="col-md-6">
            <div>Classification</div>
            <div class="form-group">

                {{ form_widget(form.classification) }}

            </div>
            <div>Mode</div>
            <div class="form-group">

                {{ form_widget(form.mode) }}

            </div>
            <div>Prix</div>
            <div class="form-group">

                {{ form_widget(form.prix) }}

            </div>
            <div>Affiche</div>
            <div class="form-group">

                {{ form_widget(form.affiche) }}

            </div>
            <div>Trailer</div>
            <div class="form-group">

                {{ form_widget(form.trailer) }}

            </div>
                </div>
            {#<div class="form-group">#}

            {#{{ form_widget(form.ajouter)|title }}#}

            {#</div>#}
            <div>
                <input type="submit" class="btn btn-primary pull-right" value="Ajouter" />
            </div>

            </div>
        </fieldset>

        {{ form_end(form) }}
        <!-- start: COPYRIGHT -->
        <div class="copyright">
            &copy; <span class="current-year"></span><span class="text-bold"> GameHub</span>. <span>All rights reserved</span>
        </div>
        <!-- end: COPYRIGHT -->
    </div>
    <!-- end: REGISTER BOX -->

{% endblock %}