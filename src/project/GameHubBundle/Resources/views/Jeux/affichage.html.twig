{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}


















    <div class="col-md-12">
        <div>
            <a href="{{ path('ajouterJeu') }}" class="btn btn-primary pull-right"> Ajouter Jeu </a>
        </div>
    <h3 class="over-title margin-bottom-15" align="center"> <span class="text-bold">Liste des Jeux</span></h3>

    <table class="table table-striped table-hover" id="sample-table-2">
    <thead>
    <tr>
        <th class="center">affiche</th>
        <th>Titre</th>
        <th class="hidden-xs">Genre</th>
        <th class="hidden-xs">Note</th>
        <th class="hidden-xs">Prix</th>
        <th class="center">Trailer</th>
        <th></th>
    </tr>
    </thead>



            <tbody>
            {% for j in jeux %}
            <tr>
                <td class="center"><a href="{{ asset('uploads/affiches/' ~ j.affiche) }}"><img src="{{ asset('uploads/affiches/' ~ j.affiche) }}" class="img-rounded" alt="image" width="150" height="150"></a></td>
                <td>{{ j.nom }}</td>
                <td class="hidden-xs">{{ j.genre }}</td>
                <td class="hidden-xs">{{ j.note }} / 20 </td>
                <td class="hidden-xs"> {{ j.prix }} $</td>

                <td class="center"><iframe width="300" height="150" src="{{asset (j.trailer) }}" frameborder="0" allowfullscreen></iframe></td>
                <td class="center">
                    <div class="visible-md visible-lg hidden-sm hidden-xs">
                        <a href="{{ path('modifierJeu',{'id':j.idJeux}) }}" class="btn btn-transparent btn-xs" tooltip-placement="top" tooltip="Edit"><i class="fa fa-pencil"></i></a>

                        <a href="{{ path('supprimerJeu',{'id':j.idJeux}) }}" class="btn btn-transparent btn-xs tooltips" tooltip-placement="top" tooltip="Remove"><i class="fa fa-times fa fa-white"></i></a>
                    </div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                        <div class="btn-group" dropdown="">
                            <button type="button" class="btn btn-primary btn-sm dropdown-toggle">
                                <i class="fa fa-cog"></i>&nbsp;<span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu pull-right dropdown-light" role="menu">
                                <li>
                                    <a href="{{ path('modifierJeu',{'id':j.idJeux}) }}">
                                        Edit
                                    </a>
                                </li>

                                <li>
                                    <a href="{{ path('supprimerJeu',{'id':j.idJeux}) }}">
                                        Remove
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div></td>
            </tr>
            {% endfor %}
            </tbody>


    </table>


    </div>
















